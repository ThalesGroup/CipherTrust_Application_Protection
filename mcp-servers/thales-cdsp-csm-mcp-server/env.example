# Thales CipherTrust Secrets Management (CSM) Configuration
# This server connects to CipherTrust Manager Secrets Management, powered by Akeyless

# Your Akeyless Access ID from CipherTrust Manager
AKEYLESS_ACCESS_ID=your_access_id_here

# Your Akeyless Access Key from CipherTrust Manager  
AKEYLESS_ACCESS_KEY=your_access_key_here

# CipherTrust Manager Akeyless API endpoint
# Format: https://your-ciphertrust-manager-hostname/akeyless-api/v2
AKEYLESS_API_URL=https://your-ciphertrust-manager-hostname/akeyless-api/v2

# Optional: SSL certificate verification (true/false)
# Set to false only if using self-signed certificates in development
AKEYLESS_VERIFY_SSL=true

# Optional: Logging configuration
# Valid MCP log levels: DEBUG, INFO, NOTICE, WARNING, ERROR, CRITICAL, ALERT, EMERGENCY
# Default: INFO
LOG_LEVEL=INFO 